{
  "manifest_version": 3,
  "name": "iTab - 网址导航",
  "version": "1.0.0",
  "description": "个人网址导航新标签页",
  "permissions": [
    "storage",
    "tabs",
    "favicon"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://favicon.im/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "iTab 网址导航"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
